<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
  <% if current_page?(root_path) %>
  	<meta name="google-site-verification" content="5cqkIsNGVT849oEnVDTCDBBcPkuNoIFi4MUiPMVx4b8" />
  <% end %>
</head>
<body class="<%= controller.controller_name %>">

	<%= render "layouts/social_js_snippet" %>

	<% if Rails.env.production? %>
  	<%= render "layouts/google_analytics_snippet" %>
  <% end %>

	<%= render "layouts/header" %>

	<div class="container">
  	<div class="col-xs-12 col-md-8 col-md-offset-2 central-wrapper">
			<% unless no_flash?("#{params[:controller]}##{params[:action]}") %>
				<%= render "layouts/flash_messages" %>
			<% end %>

			<%= yield %>
		</div>
	</div>

	<%= render "layouts/footer" %>

</body>
</html>
